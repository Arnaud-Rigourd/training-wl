<div class="container">
  <h1>Here are all your restaurants</h1>
  <p><%= link_to "Add a new restaurant", new_restaurant_path %></p>

  <% @restaurants.each do |r| %>
    <ul>
      <li><%= link_to "#{r.name.upcase},", restaurant_path(r) %><%= " #{r.category} food" %></li>
      <li><%= "Address: #{r.address}" %></li>
    </ul>
  <% end %>

</div>
