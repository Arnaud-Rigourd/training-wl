<div class="container">
  <p><%= link_to "back to index", restaurants_path %></p>
  <h1><%= @restaurant.name %></h1>

  <main>
    <p><%= "Category: #{@restaurant.category}" %></p>
    <p><%= "Address: #{@restaurant.address}" %></p>
    <p><%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant) %></p>
    <p><%= link_to "Delete restaurant", restaurant_path(@restaurant), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
  </main>

  <main>
    <h2>Reviews</h2>
    <p><%= link_to "Writte a review", new_restaurant_review_path(@restaurant) %></p>
    <% @reviews.each do |r| %>
      <ul>
        <li><%= "Rate: #{r.raiting}/5" %></li>
        <li><%= "Comment: #{r.content}" %></li>
      </ul>
    <% end %>
  </main>
</div>
